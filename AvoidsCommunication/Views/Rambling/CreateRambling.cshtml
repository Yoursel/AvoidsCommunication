@using AvoidsCommunication.Domain.Enum
@model AvoidsCommunication.Domain.ViewModel.Rambling.RamblingViewModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "Создать запись";
    Layout = "_Layout";
}

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="container d-flex align-items-center justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                    <div class="card-body p-5 text-center">
                        <form autocomplete="on" method="post" asp-controller="Rambling" asp-action="CreateRambling">
                           <div asp-validation-summary="All"></div>
                            <div class="form-group">
                                <input asp-for="Name" type="text" class="form-control mb-2" placeholder="Название"/>
                            </div>

                            <div class="form-group">
                                <input asp-for="Content" type="text"  class="form-control mb-2" placeholder="Статья"/><br>
                            </div>

                            <div class="form-group">
                                <input asp-for="Cover" type="file"/><br>
                            </div>

                            <div class="form-group">
                                <select asp-for="Topic" asp-items="@Html.GetEnumSelectList<Topic>()" class="form-control mb-2" placeholder="Тема"></select>
                            </div>

                            <div class="col text-center">
                                <button class="btn btn btn-dark mt-3 mb-3">Сохранить</button>
                            </div>
                        </form>
                        
                </div>
            </div>
        </div>
    </div>
</section>